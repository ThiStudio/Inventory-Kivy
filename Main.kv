#:kivy 2.0.0

<StartScr>
    cols: 2
    padding: [10, 10, 10, 10]
    Button:
        id: b1
        text: "Equipamentos"
    Button:
        id: b2
        text: "Eventos"
    Button:
        id: b3
        text: "Checklists"
    Button:
        id: b4
        text: "Admin"

<EquipScr>
    cols: 1
    padding: [10, 10, 10, 10]
    BackButton:
        id: back
        text: "Voltar"
    GridLayout:
        padding: [10, 10, 10, 10]
        cols: 3
        size_hint_y: 2
        GridLayout:
            size_hint_x: 9
            cols: 1
            Label:
                text: "Pesquisa"
            TextInput:
                id: i_pesquisado
        Button:
            id: b_pesquisar
            size_hint_x: 3
            text: "Pesquisar"
    GridLayout:
        cols: 1
        id: e_container
        size_hint_y: 9

<EventScr>
    cols: 1
    BackButton:
        id: back
        text: "Voltar"
    Label:
        text: "Events"
    GridLayout:
        cols: 1
        id: v_container
        size_hint_y: 9

<CheckScr>
    cols: 1
    BackButton:
        id: back
        text: "Voltar"
    Label:
        text: "Checklists"
    GridLayout:
        cols: 1
        id: c_container
        size_hint_y: 9

<AdminScr>
    cols: 1
    BackButton:
        id: back
        text: "Voltar"
    Label:
        text: "Admin"
    Label:
        text: "API related configs and stoof"

#Item da lista de eventos
<EventItem>
    cols: 3

    l_name: ""
    l_start: ""
    l_end: ""

    Label:
        text: root.l_name
    Label:
        text: root.l_start
    Label:
        text: root.l_end

#Item da lista de checklists
<CheckItem>
    cols: 2

    l_name: ""
    l_items: ""
    Label:
        text: root.l_name
    Label:
        text: root.l_items

#Item da lista de equipamentos
<EquipItem>
    cols: 2

    l_name: ""
    l_id: ""

    Label:
        text: root.l_name
    Label:
        text: root.l_id


#Interfaces below
<BackButton@Button>:
    size_hint_y: None
    height: 60

#Popup calendario


<Lista>
    RecycleBoxLayout:
        default_size: None, dp(56)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'

#Selected Equip
<Equipamento@GridLayout>:
    cols: 1
    padding: [10, 10, 10, 10]
    GridLayout:
        padding: [10, 10, 10, 10]
        size_hint_y: 8
        cols: 2
        Label:
            text: "ID"
            size_hint_x: 1
        TextInput:
            id: i_item_id
            size_hint_x: 3
        Label:
            text: "Equipamento"
        TextInput:
            id: i_item_name
        Label:
            text: "Qtd Total"
        TextInput:
            id: i_item_qttot
        Label:
            text: "Qtd em uso"
        TextInput:
            id: i_item_qtuso
        Label:
            text: "Qtd com defeito"
        TextInput:
            id: i_item_qtdef
        Label:
            text: "Qtd disponivel"
        TextInput:
            id: i_item_qtdis
        Label:
            text: "Observações"
        TextInput:
            id: i_item_obs
            size_hint_x: 1
    GridLayout:
        cols: 3
        Button:
            id:b_item_add
            text:"Adicionar"
        Button:
            id:b_item_def
            text:"Defeito"
        Button:
            id:b_item_sav
            text:"Salvar"

#Evento Selecionado
<Evento@GridLayout>:
    cols: 1
    padding: [10, 10, 10, 10]
    GridLayout:
        padding: [10, 10, 10, 10]
        size_hint_y: 8
        cols: 2
        Label:
            text: "Evento"
            size_hint_x: 3
        TextInput:
            id: i_event_name
            size_hint_x: 8
        Label:
            text: "Montagem"
        TextInput:
            id: i_event_start
        Label:
            text: "Desmontagem"
        TextInput:
            id: i_event_end
        Label:
            text: "Equipe"
        TextInput:
            id: i_event_team
        Label:
            text: "Checklist"
        TextInput:
            id: i_event_check
        Label:
            text: "Observações"
        TextInput:
            id: i_event_obs
            size_hint_x: 1
    GridLayout:
        cols: 3
        Button:
            id:b_event_cancel
            text:"Cancelar"
        Button:
            id:b_event_edit
            text:"Editar"
        Button:
            id:b_event_check
            text:"Checklist"

#Checklist selecionada
<Checklist@GridLayout>:
    cols: 1
    padding: [10, 10, 10, 10]
    Label:
        text: "Nome da Checklist"
    TextInput:
        id: i_check_name
    Label:
        text: "Itens"
    TextInput:
        id: i_check_items
        size_hint_y: 8